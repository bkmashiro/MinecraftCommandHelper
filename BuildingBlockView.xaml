            </Button.RenderTransform>
        </Button>
        <Button Content="添加命令块" HorizontalAlignment="Left" VerticalAlignment="Top" Width="75" Click="Button_Click_1" Panel.ZIndex="11" Canvas.Left="483" Canvas.Top="77"/>

    </Canvas>
